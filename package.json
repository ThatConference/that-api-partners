{
  "name": "that-api-partners",
  "version": "2.3.0",
  "description": "THAT Conference partners service",
  "main": "index.js",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "build": "rimraf __build__ && babel ./src -d ./__build__ --copy-files --ignore ./**/__tests__",
    "postbuild": "cp .env package* __build__",
    "predeploy:local": "npm run build",
    "deploy:local": "cd ./__build__ && node index.js",
    "start:watch": "nodemon -e env,js,json,graphql --watch src --ignore '*.test.js' --exec npm run deploy:local",
    "start": "node index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "lint": "eslint 'src/**/*.js'",
    "validate": "concurrently npm:test npm:lint npm:build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@apollo/federation": "0.22.0",
    "@google-cloud/firestore": "^5.0.2",
    "@google-cloud/trace-agent": "^5.1.6",
    "@graphql-tools/load-files": "6.2.7",
    "@graphql-tools/merge": "6.2.10",
    "@sentry/node": "^6.19.2",
    "@thatconference/api": "~2.8.4",
    "apollo-server-express": "2.22.2",
    "dataloader": "^2.0.0",
    "debug": "^4.3.4",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "graphql": "^15.8.0",
    "graphql-scalars": "^1.15.0",
    "graphql-type-json": "^0.3.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.2",
    "postmark": "^3.0.1",
    "response-time": "^2.3.2",
    "slugify": "^1.6.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.17.7",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.5.1",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest-cli": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier-eslint": "^13.0.0",
    "prettier-eslint-cli": "^5.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "rootDir": "./src",
    "coverageDirectory": "../__testCoverage__"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ThatConference/that-api-partners"
  },
  "license": "GPL-3.0"
}
