{
  "name": "that-api-partners",
  "version": "2.0.1",
  "description": "THAT Conference partners service",
  "main": "index.js",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "build": "rimraf __build__ && babel ./src -d ./__build__ --copy-files --ignore ./**/__tests__",
    "postbuild": "cp .env package* __build__",
    "predeploy:local": "npm run build",
    "deploy:local": "cd ./__build__ && node index.js",
    "start:watch": "nodemon -e env,js,json,graphql --watch src --ignore '*.test.js' --exec npm run deploy:local",
    "start": "node index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "lint": "eslint 'src/**/*.js'",
    "validate": "concurrently npm:test npm:lint npm:build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@apollo/federation": "0.22.0",
    "@google-cloud/firestore": "^4.15.1",
    "@graphql-tools/load-files": "6.2.7",
    "@graphql-tools/merge": "6.2.10",
    "@sentry/node": "^6.15.0",
    "@thatconference/api": "~2.3.0",
    "apollo-server-express": "2.22.2",
    "dataloader": "^2.0.0",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.7.2",
    "graphql-scalars": "^1.13.6",
    "graphql-type-json": "^0.3.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "postmark": "^2.7.8",
    "response-time": "^2.3.2",
    "slugify": "^1.6.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.15.5",
    "@babel/node": "^7.15.4",
    "@babel/preset-env": "^7.15.4",
    "@babel/register": "^7.15.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.1.1",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest-cli": "^27.1.1",
    "nodemon": "^2.0.12",
    "prettier-eslint": "^13.0.0",
    "prettier-eslint-cli": "^5.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "rootDir": "./src",
    "coverageDirectory": "../__testCoverage__"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ThatConference/that-api-partners"
  },
  "license": "GPL-3.0"
}
