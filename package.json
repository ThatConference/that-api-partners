{
  "name": "template-graph-server",
  "version": "1.0.0",
  "description": "unspecified's version of a federated graph server",
  "main": "index.js",
  "engines": {
    "node": "10.15.0"
  },
  "scripts": {
    "build": "rimraf __build__ && babel ./src -d ./__build__ --copy-files --ignore ./**/__tests__,./**/__mocks__",
    "postbuild": "cp .env __build__",
    "predeploy:local": "npm run build",
    "deploy:local": "cd ./__build__ && functions-framework --target=graphEndpoint --port=8002 --verbose",
    "start:watch": "nodemon -e env,js,json,graphql --watch src --ignore '*.test.js' --exec npm run deploy:local",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "lint": "eslint 'src/**/*.js'",
    "validate": "concurrently npm:test npm:lint npm:build"
  },
  "dependencies": {
    "@apollo/federation": "^0.11.0",
    "@google-cloud/firestore": "^2.6.0",
    "@sentry/node": "^5.9.0",
    "apollo-datasource-rest": "^0.6.6",
    "apollo-server": "^2.9.9",
    "apollo-server-cloud-functions": "^2.9.9",
    "connect": "^3.7.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "graphql": "^14.5.8",
    "graphql-scalars": "^1.0.4",
    "graphql-type-json": "^0.3.0",
    "lodash": "^4.17.15",
    "merge-graphql-schemas": "^1.7.3",
    "moment": "^2.24.0",
    "response-time": "^2.3.2",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/node": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/register": "^7.7.0",
    "@google-cloud/functions-framework": "^1.3.2",
    "babel-jest": "^24.9.0",
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "jest-cli": "^24.9.0",
    "nodemon": "^1.19.4",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run validate"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "rootDir": "./src",
    "coverageDirectory": "../__testCoverage__"
  }
}
