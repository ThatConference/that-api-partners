{
  "name": "that-api-partners",
  "version": "1.0.0",
  "description": "that's partners api",
  "main": "index.js",
  "engines": {
    "node": "10.15.0"
  },
  "scripts": {
    "build": "rimraf __build__ && babel ./src -d ./__build__ --copy-files",
    "postbuild": "cp .env __build__",
    "predeploy:local": "npm run build",
    "deploy:local": "cd ./__build__ && functions-framework --target=graphEndpoint --port=8002 --verbose",
    "start:watch": "nodemon -e env,js,json,graphql --watch src --ignore '*.test.js' --exec npm run deploy:local",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "lint": "eslint 'src/**/*.js'",
    "validate": "concurrently npm:test npm:lint npm:build"
  },
  "dependencies": {
    "@apollo/federation": "^0.12.1",
    "@google-cloud/firestore": "^3.5.1",
    "@sentry/node": "^5.13.1",
    "@thatconference/api": "^1.5.0",
    "apollo-server": "^2.10.1",
    "apollo-server-cloud-functions": "^2.10.1",
    "connect": "^3.7.0",
    "dataloader": "^2.0.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "faker": "^4.1.0",
    "graphql": "^14.6.0",
    "graphql-scalars": "^1.0.6",
    "graphql-type-json": "^0.3.1",
    "lodash": "^4.17.15",
    "merge-graphql-schemas": "^1.7.6",
    "moment": "^2.24.0",
    "response-time": "^2.3.2",
    "slugify": "^1.4.0",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.8.6",
    "@babel/register": "^7.8.6",
    "@google-cloud/functions-framework": "^1.4.0",
    "babel-jest": "^25.1.0",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest-cli": "^25.1.0",
    "nodemon": "^2.0.2",
    "pino-pretty": "^3.6.1",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run validate"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "rootDir": "./src",
    "coverageDirectory": "../__testCoverage__"
  }
}
